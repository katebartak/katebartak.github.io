				var reviews_bg = 'home-reviews-bg.jpg';
			include ../sections/home-page/section-reviews
			+section_reviews(reviews_bg)
			include ../sections/home-page/section-partners
			include ../sections/home-page/section-certificate
			include ../sections/product-page/section-wysiwyg
			include ../sections/product-page/section-quality
			include ../sections/home-page/section-commercial
			include ../sections/home-page/section-services
