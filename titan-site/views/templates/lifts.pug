doctype html
html(lang='no')
	include ../common_meta/head
	body.front
		include ../components/_header
		main.page-container


			// ===================================================
			-
				var firstscreen_background = 'freight-elevators-firstscreen-bg.jpg',
						firstscreen_title = 'лифты',
						firstscreen_subtitle = 'Напрямую от производителя';
			include ../sections/product-page/section-firstscreen
			+product_section_firstscreen(firstscreen_background, firstscreen_title, firstscreen_subtitle)

			// ===================================================
			-
				var product_title = 'Наша продукция',
						product_items = [
							{
								image: 'product-lift-00.jpg',
								name: 'Пассажирские лифты',
								costs: 'от 120 000 руб',
								capacity: 'до 10 000 кг',
								height: 'до 50 м',
								speed: '0,13 м/с',
								// size: '940 х 1300',
								// power: 'от 0,55 до 1,4 кВт'
							},
							{
								image: 'product-lift-01.jpg',
								name: 'Коттеджные лифты',
								costs: 'от 120 000 руб',
								capacity: 'до 10 000 кг',
								height: 'до 50 м',
								speed: '0,13 м/с',
								// size: '940 х 1300',
								// power: 'от 0,55 до 1,4 кВт'
							},
						],
						product_section_class = 'grey-background';
			include ../sections/product-page/section-product-lifts
			+products_lifts(product_title, product_items, product_section_class)


			// ===================================================
			-
				var advantage_heading = 'Преимущества лифтов от <br> производственного центр «Титан»',
						advantage_class = 'three-in-row',
						advantage_folder = 'adventage-lifts-icons',
						advantages_items = [
							{
								title: 'Не требует регистрации',
							},
							{
								title: 'Дешевле грузовых лифтов',
							},
							{
								title: 'Безопасный в работе',
							},
							{
								title: 'Может устанавливаться как внутри, так и снаружи здания',
							},
							{
								title: 'Короткие сроки изготовления и монтажа',
							},
							{
								title: 'Быстро окупается',
							},
							{
								title: 'Долговечный в использовании, в том числе при интенсивных нагрузках',
							},
							{
								title: 'Имеет собственный каркас, который впоследствии можно обшить',
							},
							{
								title: 'Более экономичен и прост в эксплуатации по сравнению с лифтом',
							},
						];
			include ../sections/product-page/section-freight-advantages
			+products_advantages(advantage_heading, advantage_class, advantage_folder, advantages_items, advantage_note)

			include ../sections/product-page/section-application

			include ../sections/home-page/section-objects
			include ../sections/product-page/secton-controls-five-items
			-
				var reviews_bg = 'home-reviews-bg.jpg';
			include ../sections/home-page/section-reviews
			+section_reviews(reviews_bg)
			include ../sections/home-page/section-partners
			include ../sections/home-page/section-certificate
			include ../sections/product-page/section-wysiwyg
			include ../sections/home-page/section-commercial
			include ../sections/home-page/section-services
			include ../sections/home-page/section-contacts

		include ../components/_footer
		include ../common_meta/footer_scripts
