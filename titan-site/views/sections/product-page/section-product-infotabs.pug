				.infotabs-content-item.active(data-tabs='info')
					.infotabs-info-group
						// ===
						.infotabs-info-thumb
							.infotabs-info-preview
								each item in infotabs_info
									.infotabs-info-preview-item
										img(src='img/infotabs-info/' + item.image)
							.infotabs-info-picture
								each item in infotabs_info
