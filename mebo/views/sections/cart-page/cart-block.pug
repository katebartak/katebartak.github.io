section.cart-block
  .container
    include ../../components/breadcrumbs
    h2 Кошик
    .cart-block__wrap
      .cart-block__title У кошику 5 товарів
      each item in [1,2,3,4,5]
        .cart-block__item.flex
          .cart-block__item-left.flex
            .cart-block__img
              img(src="img/product-img.png" alt="sofa")
            div
              a(href="#").cart-block__item-title Назва товару
              .cart-block__item-code Арт. 000000
              .cart-block__item-variant Название ткани
              .cart-block__item-color(style="background-color: #EB2E2E")
              .show-before-tablet-tablet.cart-block__item-price 50 000 грн
          .cart-block__item-right
            .show-from-tablet.cart-block__item-price 50 000 грн
          button.cart-block__item-delete
      .cart-block__final
        .cart-block__final-wrap
          .cart-block__price Всього: 250 000 грн
          button.btn Перейти до оформлення